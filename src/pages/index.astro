	/* --- MODERN FILTER BAR --- */
/* --- MODERN FILTER BAR CONTAINER --- */
.filter-bar {
    position: sticky;
    top: 0;
    z-index: 100;
    
    /* Glass Effect */
    background: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-bottom: 1px solid rgba(0,0,0,0.05);
    
    /* Layout */
    display: flex;
    gap: 0.75rem;
    align-items: center;
    padding: 1rem 5%;
    margin-bottom: 2rem;
    
    /* Default: Scrollable (Mobile) */
    overflow-x: auto;
    flex-wrap: nowrap;
    justify-content: flex-start;
    
    /* Hide Scrollbars */
    scrollbar-width: none;
    -ms-overflow-style: none;
}
.filter-bar::-webkit-scrollbar { display: none; }

/* --- THE "PILL" BUTTONS --- */
.filter-btn {
    /* Reset Defaults */
    appearance: none;
    border: 1px solid transparent;
    outline: none;
    font-family: inherit;
    
    /* Modern Look */
    background: #f1f5f9;       /* Very light grey */
    color: #64748b;            /* Muted slate text */
    padding: 0.6rem 1.25rem;   /* Comfortable touch size */
    border-radius: 9999px;     /* Full "Pill" Rounding */
    
    /* Typography */
    font-size: 0.85rem;
    font-weight: 600;
    letter-spacing: 0.01em;
    white-space: nowrap;
    cursor: pointer;
    
    /* Smooth Animation */
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 1px 2px rgba(0,0,0,0.02);
}

/* Hover State */
.filter-btn:hover {
    background: #e2e8f0;       /* Slightly darker on hover */
    color: #0f172a;            /* Darker text */
    transform: translateY(-1px); /* Micro-lift */
}

/* Active/Selected State (You can add class="active" to 'All Tools' manually if needed) */
.filter-btn.active {
    background: #0f172a;       /* Dark Brand Color */
    color: white;
    box-shadow: 0 4px 12px rgba(15, 23, 42, 0.3); /* Soft Glow */
    transform: translateY(-1px);
}

/* --- DESKTOP TWEAK: VIEW ALL --- */
/* On larger screens, wrap the buttons so they are all visible */
@media (min-width: 900px) {
    .filter-bar {
        flex-wrap: wrap;         /* Enable wrapping */
        justify-content: center; /* Center them nicely */
        padding: 1.5rem 10%;     /* More breathing room */
        overflow: visible;
    }
}
            /* --- End Filter Styles --- */
            
            .category-section { margin-bottom: 0.5rem; scroll-margin-top: 20px; }

            .card { 
                background: white; 
                border: 1px solid #e2e8f0; 
                border-radius: 8px; 
                padding: 1.5rem; 
                transition: transform 0.2s; 
                position: relative; 
            }
            .card:hover { transform: translateY(-3px); border-color: #cbd5e1; box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1); }
            
            .category-tag { font-size: 0.75rem; text-transform: uppercase; letter-spacing: 0.05em; color: #64748b; font-weight: bold; }
            
            .card-logo {
                position: absolute;
                top: 1.5rem;
                right: 1.5rem;
                width: 75px;       
                height: 75px;      
                object-fit: contain;
